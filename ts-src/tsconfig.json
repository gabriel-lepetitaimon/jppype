{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2019",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "types": [
      "resize-observer-browser"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/extension.js",
    "src/extension.js"
  ],
  "exclude": [
    "src/**/__tests__"
  ]
}